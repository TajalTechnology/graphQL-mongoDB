    "schemes": ["https"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/users/registration": {
            "post": {
                "tags": ["Users"],
                "summary": "Create new user and send code to user",
                "description": "*Create user with phn or email \n *Response with verification code.Use this code to verify",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "201": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        },
        "/users/otp_verify": {
            "put": {
                "tags": ["Users"],
                "summary": "Verify otp",
                "description": "New description in bangla\n new another line",
