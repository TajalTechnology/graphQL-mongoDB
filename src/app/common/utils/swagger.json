                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Otp updated",
                        "schema": {
                            "$ref": "#/definitions/OtpModel"
                        }
                    }
                }
            }
        },
        "/users/password_set": {
            "put": {
