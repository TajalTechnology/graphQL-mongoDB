    "definitions": {
        "UserModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "md@gmail.com"
                },
                "phnNo": {
                    "type": "string",
                    "example": "1883950739"
                },
                "ownGender": {
                    "type": "string",
                    "example": "Male",
                    "required": true
                },
                "findGender": {
                    "type": "string",
                    "example": "Male",
                    "required": true
                },
                "providerName": {
                    "type": "string",
                    "example": "google"
                },
                "fristName": {
                    "type": "string",
                    "example": "Md Tajal Islam"
                },
                "lastName": {
                    "type": "string",
                    "example": "Porage"
                },
                "username": {
                    "type": "string",
                    "example": "Porage"
                },
                "photos": {
                    "type": "string",
                    "example": "phot live url"
                }
            }
        },
        "OtpModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "md@gmail.com"
                },
                "phnNo": {
                    "type": "string",
                    "example": "1883950739"
                },
                "verificationCode": {
                    "type": "string",
                    "example": "123456"
                }
            }
        },
        "SessionModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "md@gmail.com"
                },
                "phnNo": {
                    "type": "string",
                    "example": "1883950739"
                },
                "username": {
                    "type": "string",
                    "example": "Porage"
                },
                "password": {
                    "type": "string",
                    "example": "123456"
                },
                "verificationCode": {
                    "type": "string",
                    "example": "123456"
                },
                "isRemember": {
                    "type": "boolean",
                    "example": "false"
                }
            }
        },
        "PasswordSetModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "md@gmail.com"
                },
                "phnNo": {
                    "type": "string",
                    "example": "1883950739"
                },
                "password": {
                    "type": "string",
                    "example": "123456 || 100572053886777088410",
                    "required": true
                },

                "passwordConfirmation": {
                    "type": "string",
                    "examples": "123456"
                },
                "isRemember": {
                    "type": "boolean",
                    "example": "false"
                }
            }
        },
        "ResendModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "md@gmail.com"
                },
                "phnNo": {
                    "type": "string",
                    "example": "1883950739"
                }
            }
        }
